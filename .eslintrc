{
  root: true,
  parser: 'babel-eslint',
  parserOptions: {
    sourceType: 'module'
  },
  env: {
    browser: true,
  },
  extends: 'airbnb-base',
  rules: {
    'import/extensions': [0, 'always'],
    'import/no-extraneous-dependencies': [0, 'always'],
    'import/first': [0, 'always'],
    'import/no-unresolved': ['error', { 'ignore': [ 'App' ] } ],

    'indent': [2, 2, {
      'SwitchCase': 1,
      'ignoredNodes': [
        'IfStatement',
        'ConditionalExpression'
      ],
    }],
    'linebreak-style': [2, 'unix'],
    'quotes': [2, 'single'],
    'semi': [2, 'never'],
    'object-shorthand': [0, 'always'],
    'no-multi-spaces': [0, 'always'],
    'comma-dangle': ['error', 'always-multiline'],
    'no-cond-assign': ['error', 'always'],
    'eqeqeq': [0, 'always'],
    'space-unary-ops': [0, 'always'],
    'curly': [0, 'always'],
    'keyword-spacing': [2, {
      'overrides': {
        'else': { 'before': false, 'after': false },
        'catch': { 'before': false, 'after': true },
      },
    }],
    'no-plusplus': [0, 0],
    'no-restricted-syntax': [0, 0],
    'padded-blocks': [0, 0],
    'space-before-blocks': [0, 0],
    'guard-for-in': [0, 0],
    'no-useless-escape': [0, 0],
    'no-continue': [0, 0],
    'no-use-before-define': [0, 0],
    'prefer-destructuring': [0, 0],
    'camelcase': [0, 0],
    'quote-props': [0, 0],
    'no-multi-assign': [0, 0],
    'no-else-return': [0, 0],
    'no-param-reassign': [0, 0],
    'operator-linebreak': [0, 0],
    'radix': [0, 0],
    'array-callback-return': [0, 0],
    'function-paren-newline': [0, 0],
    'no-case-declarations': [0, 0],
    'prefer-promise-reject-errors': [0, 0],
    'no-restricted-globals': [0, 0],
    'operator-assignment': [0, 0],
    'no-nested-ternary': [0, 0],

    'computed-property-spacing': ['warn', 'never'],
    'template-curly-spacing': ['warn', 'never'],
    'nonblock-statement-body-position': ['warn', 'any'],
    'prefer-arrow-callback': ['warn'],
    'consistent-return': ['warn'],
    'arrow-body-style': ['warn'],
    'prefer-template': ['warn'],
    'no-inner-declarations': ['warn'],
  },
}